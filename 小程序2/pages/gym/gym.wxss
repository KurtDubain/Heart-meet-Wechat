/* pages/gym/gym.wxss */
.container{
  padding:  0 0 100px 0;
}
.header{
  display: flex;
}
.photo{
  width: 6em;
  height: 6em;
  margin: 10px auto;
  border: 1px solid black;
  border-radius: 10px;
}
.info{
  width: 200px;
  margin: 20px auto;
}
.name{
  width: 90%;
  margin: 10px auto;
  height: 20px;
  line-height: 20px;
  border: 1px solid black;
  text-align: center;
  border-radius: 5px;
}
.position{
  text-align: center;
  font-size: 20%;
}
.state{
  width: 90%;
  margin: 10px auto;
  height: 20px;
  line-height: 20px;
  border: 1px solid black;
  text-align: center;
  border-radius: 5px;
}
.state text{
  font-size: 80%;
}
.tele{
  display: flex;
  width: 90%;
  height: 50px;
  margin: 20px auto;
  border: 1px solid black;
  border-radius: 5px;
}
.tele image{
  margin: auto 10px;
  width: 30px;
  height: 30px;
  border: 1px solid black;
}
.tele view{
  line-height: 50px;
}
.comment{
  width: 90%;
  margin: auto;
  color: goldenrod;
  font-size: 50rpx;
}
.tail{
  width: 100%;
  display: flex;
  position: fixed;
  bottom: 0;
  border-top: 1px solid black;
  background-color: lightblue;
}
.tail > view{
  width: 30px;
  height: 40px;
  margin: 15px auto;
  text-align: center;
  line-height: 30px;
  border-radius: 5px;
}
.tail > view > image{
  margin: auto;
  width: 30px;
  height: 30px;
}
.tail > view > view{
  width: 30px;
  position: fixed;
  bottom: 0px;
  text-align: center;
  margin: 0px;
  font-size: 12PX;
}
.pinglunitem{
  font-size: 40rpx;
}
.input{
  border: 1px solid gainsboro;
  margin-top: 150rpx;
  margin-bottom: 60rpx;
}
.user{
  font-size: 15px;
  float: left;
}
.pl{
  font-size: 15px;
  float: left;
}
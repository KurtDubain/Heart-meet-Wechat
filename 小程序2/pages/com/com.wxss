/* pages/com/com.wxss */
.head{
  width: 100%;
  height: 100px;
}
.tx{
  width: 70px;
  height: 70px;
  border-radius: 50%;
  float: left;
  margin: 20px 0 0 10%;
}
.name{
  text-align: left;
  font-size: 20px;
  width: 40%;
  float: left;
  margin: 25px 20px;
}
.time{
  text-align: left;
  width: 40%;
  float: left;
  margin: -15px 20px ;
}
.information{
  text-align: left;
  width: 60%;
  bottom: 0;
  margin: 20%;
  margin: 10px auto;
  font-size: 18px;
}
.photo{
  width: 70%;
  height: 200px;
  margin: 10px 15%;
}
.control image{
  width: 40px;
  height: 40px;
}
.control{
  position: relative;
  width: 100%;
  height: 50px;
  border-bottom: 1px solid black;
}
.sc{
  position: absolute;
  left: 5%;
}
.xh{
  position: absolute;
  width: 30px;
  height: 30px;
  left: 40%;
}
.xhnumber{
  font-size: 14px;
  position: absolute;
  top: 10px;
  left: 52%;
}
.pl{
  position: absolute;
  left: 63%;
}
.plnumber{
  font-size: 14px;
  position: absolute;
  top: 10px;
  left: 75%;
}
.share{
  display:block;
  width: 40px;
  height: 40px;
  padding: 0;
  position: absolute;
  left: 87%;
  margin: auto;
  background-size: 40px 40px;
  background-repeat: no-repeat;
  border-radius: 50%;
  border: none;
}
.pinglunitem{
  font-size: 14px;
  height: 50px;
  text-align: center;
}
.container{
  padding:  0 0 100px 0;
}
.fspl{
  width: 100%;
  height: 10%;
  display: flex;
  background-color: lightblue;
  border-top: 1px solid black;
  position: fixed;
  bottom: 0;
}
.textinput{
  position: absolute;
  top: 15px;
  left: 10%;
  background-color: white;
  border: 1px solid black;
}
.btn{
  width: 55px;
  font-size: 13px;
  position: absolute;
  top: 15px;
  right: 10%;
  text-align: center;
  line-height: 25px;
  height: 25px;
}
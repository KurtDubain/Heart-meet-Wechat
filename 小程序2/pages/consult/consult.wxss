/* pages/consult/consult.wxss */
.nav{
  display: flex;
  background-color: lightcyan;
}
.selected{
  width: 80px;
  margin: auto;
  padding: 2px;
  text-align: center;
  border-bottom: 2px solid red;
  font-weight: 600;
}
.normal{
  width: 80px;
  margin: auto;
  padding: 2px;
  text-align: center;
  font-weight: 600;
}
.t{
  background-color: rgb(241, 241, 241);
}
.tutor{
  width: 60%;
  margin: 10px auto;
  text-align: center;
  border: 1px solid black;
  background-color: lightcyan;
  box-shadow: 2px 2px 2px 2px gray;
}
.consultant{
  width: 60%;
  margin: 30px auto;
  text-align: center;
  border: 1px solid black;
}
.tutor_data{
  width: 95%;
  height: 500px;
  margin: auto;
  border: 1px solid black;
  background-color: white;
}
.t_data{
  width: 96%;
  height: 100px;
  margin: 2% 0 2% 2%;
  display: flex;
  position: relative;

  border-radius: 10px;
  background-color: white;
  box-shadow: 1px 1px 1px 1px gray;
}
.t_photo{
  width: 65px;
  height: 80px;
  margin: 10px;
  border-radius: 10px;
}
.t_text{
  width: 50%;
  margin-top: 2%;
  display: flex;
  flex-direction: column;

}
.t_text view{
  margin: 1px;
}
.t_name{
  font-weight: 600;
}
.t_number{
  font-size: 12px;
  color: gray;
}
.t_mark{
  color: deepskyblue;
}
.t_place{
  color: deepskyblue;
}
.rec{
  position: absolute;
  height: 17px;
  width: 20px;
  text-align: center;
  line-height: 17px;
  right: -1px;
  top: -1px;
  font-size: 10px;
  box-shadow: 1px 1px 1px 1px gray;
  border-radius: 1px 10px 1px 4px;
  background-color: lightcyan;
  color: red;
}
.book{
  font-size: 17px;
  position: absolute;
  right: -1px;
  top: 50%;
  height: 30px;
  line-height: 30px;
  border-radius: 5px 0px 0px 5px;
  background-color: lightcyan;
  color: orangered;
  font-weight: 600;
  box-shadow: 1px 1px 1px 1px gray;
}
.title{
  font-size: 20px;
  font-weight: 600;
  background-color: pink;
  height: 50px;
  margin: 10px;
  box-shadow: 1px 1px 1px 1px gray;
  border-radius: 10px;
  line-height: 50px;
}
.click{
  border: 1px solid black;
  margin: 10px;
  height: 300px;
  border-radius: 10px;

}
.zhushou{
  display: block;
  margin: 20px auto;
  width: 250px;
  height: 250px;
  border-radius: 50%;
  animation: box-ani 4s  infinite linear;
}
@keyframes box-ani {
  from {transform: rotate(0)}
  to {transform: rotate(-360deg)}
}